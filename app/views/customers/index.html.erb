<h1>Listing customers</h1>
<%= link_to 'New Customer', new_customer_path %>
<table>
    <tr>
        <th> English Name</th>
        <th> Chinese Name</th>
        <th> description</th>
        <th colspan = '3'> </th>
    </tr>
    <% @customers.each do |customer| %>
        <tr>
            <td> <%= customer.English_name %></td>
            <td> <%= customer.Chinese_name %></td>
            <td> <%= customer.description %></td>
            <td> <%= link_to 'Show', customer_path(customer) %> </td>
            <td> <%= link_to 'Edit', edit_customer_path(customer) %> </td>
            <td> <%= link_to 'Destroy', customer_path(customer), method: :delete, data:{confirm: 'Are you sure?'} %> </td>
        </tr>
    <% end %>
</table>