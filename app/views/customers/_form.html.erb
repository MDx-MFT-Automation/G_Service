<%=form_with model:@customer,local: true do |form| %>
    <p>
        <%=form.label :English_name %> <br>
        <%=form.text_field :English_name %>
    </p>
    <p>
        <%=form.label :Chinese_name %> <br>
        <%=form.text_field :Chinese_name %>
    </p>
    <p>
        <%=form.label :description %> <br>
        <%=form.text_area :description %>
    </p>
    <p>
    <%=form.label :customer_groups %> <br>
    <%=form.collection_select(:customer_gr,CustomerGroup.all,:id,:Customer_Group__Name_English, {include_hidden: false}, {:multiple => true})%>
    </p>
    <p>
        <%=form.submit %>
    </p>
<% end %>