<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Material type</th>
      <th>Lot or serial number</th>
      <th>Manufacture date</th>
      <th>Expiration date</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.material_type.Description_English %></td>
        <td><%= material.Lot_Or_Serial_Number %></td>
        <td><%= material.Manufacture_Date %></td>
        <td><%= material.Expiration_Date %></td>
        <td><%= material.Comment %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

