<p id="notice"><%= notice %></p>

<h1>Complain Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complain_statuses.each do |complain_status| %>
      <tr>
        <td><%= complain_status.Status %></td>
        <td><%= link_to 'Show', complain_status %></td>
        <td><%= link_to 'Edit', edit_complain_status_path(complain_status) %></td>
        <td><%= link_to 'Destroy', complain_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

