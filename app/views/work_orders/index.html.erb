<p id="notice"><%= notice %></p>

<h1>Work Orders</h1>
<%= link_to 'New Work Order', new_work_order_path %>
<table>
  <thead>
    <tr>
      <th>Sap workorder number</th>
      <th>Servicemax workorder number</th>
      <th>Instrument</th>
      <th>Customer</th>
      <th>Service person</th>
      <th>Details</th>
      <th>Work order status</th>
      <th>Cost sap</th>
      <th>Cost servicemax</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_orders.each do |work_order| %>
      <tr>
        <td><%= work_order.SAP_WorkOrder_Number %></td>
        <td><%= work_order.ServiceMax_WorkOrder_Number %></td>
        <td><%= work_order.instrument.description %></td>
        <td><%= work_order.customer.Chinese_name %></td>
        <td><%= work_order.service_person.display_name %></td>
        <td><%= work_order.details %></td>
        <td><%= work_order.work_order_status.Status %></td>
        <td><%= work_order.Cost_SAP %></td>
        <td><%= work_order.Cost_ServiceMax %></td>
        <td><%= link_to 'Show', work_order %></td>
        <td><%= link_to 'Edit', edit_work_order_path(work_order) %></td>
        <td><%= link_to 'Destroy', work_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Order', new_work_order_path %>
