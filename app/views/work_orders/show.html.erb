<p id="notice"><%= notice %></p>

<p>
  <strong>Sap workorder number:</strong>
  <%= @work_order.SAP_WorkOrder_Number %>
</p>

<p>
  <strong>Servicemax workorder number:</strong>
  <%= @work_order.ServiceMax_WorkOrder_Number %>
</p>

<p>
  <strong>Instrument:</strong>
  <%= @work_order.instrument.description %>
</p>

<p>
  <strong>Customer:</strong>
  <%= link_to @work_order.customer.Chinese_name, customer_path(@work_order.customer) %>
</p>

<p>
  <strong>Service person:</strong>
  <%= @work_order.service_person.display_name %>
</p>

<p>
  <strong>Details:</strong>
  <%= @work_order.details %>
</p>

<p>
  <strong>Work order status:</strong>
  <%= @work_order.work_order_status.Status %>
</p>

<p>
  <strong>Duration:</strong>
  <table>
  <thead>
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Actual Time</th>
        <th colspan="3"></th>
      </tr>
  </thead>
  <tbody>
      <% @work_order.work_order_durations.each do |t| %>
        <tr>
          <td><%= t.Actual_Start_Date%></td>
          <td><%= t.Actual_End_Date%></td>
          <td><%= t.Actual_Time%></td>
          <th colspan="3"></th>
        </tr>
      <% end %>
  </tbody>
</table>
</p>

<p>
  <strong>Cost sap:</strong>
  <%= @work_order.Cost_SAP %>
</p>

<p>
  <strong>Cost servicemax:</strong>
  <%= @work_order.Cost_ServiceMax %>
</p>

<%= link_to 'Edit', edit_work_order_path(@work_order) %> |
<%= link_to 'Back', work_orders_path %>
