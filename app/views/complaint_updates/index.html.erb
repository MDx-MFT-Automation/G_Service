<p id="notice"><%= notice %></p>

<h1>Complaint Updates</h1>

<table>
  <thead>
    <tr>
      <th>Complaint</th>
      <th>Description</th>
      <th>Complain status</th>
      <th>Last updated on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @complaint_updates.each do |complaint_update| %>
      <tr>
        <td><%= complaint_update.complaint_id %></td>
        <td><%= complaint_update.Description %></td>
        <td><%= complaint_update.complain_status_id %></td>
        <td><%= complaint_update.Last_Updated_On %></td>
        <td><%= link_to 'Show', complaint_update %></td>
        <td><%= link_to 'Edit', edit_complaint_update_path(complaint_update) %></td>
        <td><%= link_to 'Destroy', complaint_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

