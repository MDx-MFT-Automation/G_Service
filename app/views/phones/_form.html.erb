<%= form_with(model: phone, local: true) do |form| %>
  <% if phone.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(phone.errors.count, "error") %> prohibited this phone from being saved:</h2>

      <ul>
        <% phone.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Phone_Number %>
    <%= form.text_field :Phone_Number %>
  </div>

  <div class="field">
    <%= form.label :contact_person_id %>
    <%= form.collection_select(:contact_person_id, ContactPerson.all.sort{|a,b| a.display_name <=> b.display_name}, :id, :display_name, {include_hidden: false, :prompt => "George tells you to select"}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
