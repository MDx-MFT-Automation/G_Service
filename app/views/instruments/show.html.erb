<p id="notice"><%= notice %></p>

<p>
  <strong>Material:</strong>
  <%= @instrument.material.description %>
</p>

<p>
  <strong>Equipment number:</strong>
  <%= link_to @instrument.Equipment_Number %>
</p>

<p>
<p>
    <strong>Software Versions</strong>
    <% @instrument.software_versions.each do |t|%>
    <%= link_to t.display_name,software_version_path(t) %> <br>
    <% end %>
</p>
<p>
    <strong>Customer</strong>
        <%= link_to @instrument.customer.Chinese_name,customer_path(@instrument.customer) %> <br>
  
